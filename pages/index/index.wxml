<!-- index.wxml -->
<view class="container">
    <t-tabs sticky value="{{ tabValue }}" bind:change="onTabsChange" bind:click="onTabsClick" t-class="custom-tabs" t-class-content="custom-panel">
        <t-tab-panel label="{{ item.name }}" value="{{ index }}" wx:for="{{ unitData }}" wx:key="index">
            <t-grid class="block" column="{{4}}">
                <t-grid-item wx:for="{{ item.children }}" wx:key="index" text="{{ item.name }}" image="{{ item.imgSrc }}" />
            </t-grid>
        </t-tab-panel>
    </t-tabs>
</view>